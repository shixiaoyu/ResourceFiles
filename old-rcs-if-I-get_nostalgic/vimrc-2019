set number                                                                                                                                                  
set expandtab
set cursorline
syntax on 
colorscheme darkblue
set hls
set ic " ignore case
set gdefault
set backspace=indent,eol,start
set wildmenu " enhance commandline completion
set viminfo+=! " make sure vim history works
set tabstop=4
set laststatus=2
set mouse=a
set title

let Tlist_Ctags_Cmd = '/usr/bin/ctags'
if has("autocmd")
        filetype on
endif

